@model GigerSport.Models.EditDetaiModel

@{
    ViewBag.Title = "DoneOrderDetail";
}

@using (Html.BeginForm())
{
    <select name="ChineseFontWord" disabled="true">
        <option value=@Model.detailModel.ChineseFontId selected disabled hidden>@Model.detailModel.ChineseFont</option>
        @foreach (var item in Model.createList.chinsesFontLists)
        {
            <option value=@item.chineseFontId>@item.chineseFontName</option>
        }
    </select>
    <select name="EngilshFontWord" disabled="true">
        <option value=@Model.detailModel.EngilshFontId selected disabled hidden>@Model.detailModel.EngilshFont</option>
        @foreach (var item in Model.createList.engilshFontLists)
        {
            <option value=@item.engilshFontId>@item.engilshFontName</option>
        }
    </select>
    <select name="FontColor" disabled="true">
        <option value=@Model.detailModel.FontColorId selected disabled hidden>@Model.detailModel.FontColor</option>
        @foreach (var item in Model.createList.fontColorLists)
        {
            <option value=@item.fontColorId>@item.fontColorName</option>
        }
    </select>
    <select name="NumberFontWord" disabled="true">
        <option value=@Model.detailModel.NumberFontId selected disabled hidden>@Model.detailModel.NumberFont</option>
        @foreach (var item in Model.createList.numberFontLists)
        {
            <option value=@item.numberFontId>@item.numberFontName</option>
        }
    </select>
    <select name="Style" disabled="true">
        <option value=@Model.detailModel.StyleId selected disabled hidden>@Model.detailModel.Style</option>
        @foreach (var item in Model.createList.styleLists)
        {
            <option value=@item.styleId>@item.styleName</option>
        }
    </select>
    <input type="text" placeholder="姓名" class="" name="Name" disabled="true" value=@Model.detailModel.Customer>
    <input type="text" placeholder="連絡電話" class="" name="Phone" disabled="true" value=@Model.detailModel.Phone>
    <input type="text" placeholder="收件地址" class="" name="Address" disabled="true" value=@Model.detailModel.Address>
    <input type="text" placeholder="信箱" class="" name="Email" disabled="true" value=@Model.detailModel.Email>
    <input type="text" placeholder="統一編號" class="" name="Tex" disabled="true" value=@Model.detailModel.TexId>
    <input type="text" placeholder="學校" class="" name="Department" disabled="true" value=@Model.detailModel.Department>
    <input type="text" placeholder="科系" class="" name="Major" disabled="true" value=@Model.detailModel.Major>
    <input type="text" placeholder="正面內容" class="" name="FrontWord" disabled="true" value=@Model.detailModel.FrontWord>
    <input type="text" placeholder="正面字型大小" class="" name="FrontWordSize" disabled="true" value=@Model.detailModel.FrontWordSize>
    <input type="text" placeholder="背面內容" class="" name="BackWord" disabled="true" value=@Model.detailModel.BackWord>
    <input type="text" placeholder="背面字型大小" class="" name="BackWordSize" disabled="true" value=@Model.detailModel.BackWordSize>
    <input type="text" placeholder="數量" class="" name="Quantity" disabled="true" value=@Model.detailModel.Quantity>
    <input type="text" placeholder="折扣" class="" name="Discount" disabled="true" value=@Model.detailModel.Discount>
    <input type="text" placeholder="圖" class="" name="Img" disabled="true" value=@Model.detailModel.Img>
    if (Model.detailModel.Players.Count() > 0)
    {
        <table>
            <thead>
                <tr class="thead-light">
                    <th>球員號碼</th>
                    <th>姓名</th>
                    <th>尺寸</th>
                    <th>隊長標記</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var player in Model.detailModel.Players)
                {
                    <tr>
                        <td>
                            <input type="text" placeholder="球員號碼" class="" name="" disabled="true" value=@player.number>
                        </td>
                        <td>
                            <input type="text" placeholder="姓名" class="" name="" disabled="true" value=@player.playerName>
                        </td>
                        <td>
                            <select name="PlayerSize" disabled="true">
                                <option value=@player.sizeId selected disabled hidden>@player.size</option>
                                @foreach (var item in Model.createList.sizeList)
                                {
                                    <option value=@item.sizeId>@item.sizeName</option>
                                }
                            </select>
                        </td>
                        <td>
                            <select name="LeaderMark" disabled="true">

                                @if (player.leader == true)
                                {
                                    <option value=@player.leader selected disabled hidden>有隊長標記</option>
                                    <option value=false>無隊長標記</option>
                                }
                                else
                                {
                                    <option value=@player.leader selected disabled hidden>無隊長標記</option>
                                    <option value=true>有隊長標記</option>
                                }
                            </select>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}


<a class="btn-danger" href="~/Views/" data-toggle="modal" data-target="#deleteModal">
    刪除
</a>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                確定刪除後無法恢復資料!
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">取消</button>
                @Html.ActionLink("刪除", "DeleteDetail", new { orderDetailId = Model.detailModel.OrderDetailId })
            </div>
        </div>
    </div>
</div>