}

<h2>新增訂單</h2>


<form>
    <select>
        <option value=null selected disabled hidden>中文字體</option>
    </select>
    <select>
        <option value=null selected disabled hidden>英文字體</option>
    </select>
    <select>
        <option value=null selected disabled hidden>字體顏色</option>
    </select>
    <select>
        <option value=null selected disabled hidden>數字字體</option>
    </select>
    <select>
        <option value=null selected disabled hidden>衣服樣式</option>
    </select>
    <input type="text" placeholder="姓名" class="" />
    <input type="text" placeholder="連絡電話" class="" />
    <input type="text" placeholder="收件地址" class="" />
    <input type="text" placeholder="信箱" class="" />
    <input type="text" placeholder="統一編號" class="" />
    <input type="text" placeholder="學校" class="" />
