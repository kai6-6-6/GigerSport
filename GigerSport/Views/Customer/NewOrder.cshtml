@model GigerSport.Models.CreateList

@{
    ViewBag.Title = "NewOrder";
    Layout = "~/Views/Shared/FormLayout.cshtml";
}

<h2>Jiger Sport訂購單</h2>


@using (Html.BeginForm())
{
    <input type="text" placeholder="姓名" class="" name="Name" required />
    <input type="text" placeholder="連絡電話" class="" name="Phone" required />
    <input type="text" placeholder="收件地址" class="" name="Address" required />
    <input type="text" placeholder="信箱" class="" name="Email" />
    <input type="text" placeholder="統一編號" class="" name="Tex" />
    <input type="text" placeholder="學校" class="" name="Department" />
    <input type="text" placeholder="科系" class="" name="Major" />
    <input type="text" placeholder="正面內容" class="" name="FrontWord" required />
    <input type="text" placeholder="背面內容" class="" name="BackWord" required />
    <input type="text" placeholder="數量" class="" name="Quantity" required />
    <select name="ChineseFont" required>
        <option value=null selected disabled hidden>中文字體</option>
        @foreach (var item in Model.chinsesFontLists)
        {
            <option value=@item.chineseFontId>@item.chineseFontName</option>
        }
    </select>
    <select name="EngilshFont" required>
        <option value=null selected disabled hidden>英文字體</option>
        @foreach (var item in Model.engilshFontLists)
        {
            <option value=@item.engilshFontId>@item.engilshFontName</option>
        }
    </select>
    <select name="FontColor" required>
        <option value=null selected disabled hidden>字體顏色</option>
        @foreach (var item in Model.fontColorLists)
        {
            <option value=@item.fontColorId>@item.fontColorName</option>
        }
    </select>
    <select name="NumberFont" required>
        <option value=null selected disabled hidden>數字字體</option>
        @foreach (var item in Model.numberFontLists)
        {
            <option value=@item.numberFontId>@item.numberFontName</option>
        }
    </select>
    <select name="Style" required>
        <option value=null selected disabled hidden>衣服樣式</option>
        @foreach (var item in Model.styleLists)
        {
            <option value=@item.styleId>@item.styleName</option>
        }
    </select>
    <button type="button" class="add_player">新增球員</button>
    <button type="button" class="minus_player">減少球員</button>
    <div class="players"></div>
<input class="comfirmBtn" value='送出訂單' type='submit'>




}



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

    <script>
        $(".comfirmBtn").click(function () { alert("訂單已送出，請通知Jiger Sport!"); });
        $(".add_player").click(function () {
            $(".players").append(`
                            <div class="player">
                            <input type="text" placeholder="球員編號" class="" name="PlayerNumber" required/>
                            <input type="text" placeholder="球員姓名" class="" name="PlayerName" required/>
                            <select name="LeaderMark">
                                <option value=false>無隊長標記</option>
                                <option value=true>有隊長標記</option>
                            </select>
                            <select name="PlayerSize" required>
                                <option value=null selected disabled hidden>尺寸</option>
                                @foreach(var item in Model.sizeList)
                                {
                                    <option value=@item.sizeId>@item.sizeName</option>
                                }
                            </select>
                            </div>
                            `)
        });
        $(".minus_player").last().click(function () {
            $(".player").last().remove();
        })
    </script>
}